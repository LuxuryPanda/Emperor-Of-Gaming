<%- include('../includes/head.ejs') %>
</head>

<body>

    <div class="error-section">
        <p class="error-section-title">Recupero<br>Password</p>

        <div class="error-section-info">
            <p class="error-section-subtitle">Recupera la tua Password</p>

            <p class="error-section-text">Ti verr√† inviata una mail per effettuare il reset.</p>

            <% if (errorMessage) { %>
            <p class="landing-info-pretitle" style="text-align: center;color: red;padding-bottom: 1rem;">
                <%= errorMessage %>
            </p>
            <% } %>
            <form action="/recupera-password" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <!-- EMAIL -->
                <div class="form-row">
                    <div class="form-item">
                        <div class="form-input">
                            <label for="recoverEmail">Email</label>
                            <input type="email" id="recoverEmail" name="recoverEmail"
                                value="<%= oldInput.recoverEmail %>" required>
                        </div>
                    </div>
                </div>

                <!-- PULSANTE -->
                <div class="form-row">
                    <div class="form-item">
                        <button class="button medium primary" type="submit">Recupera ora!</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

<%- include('../includes/end.ejs') %>