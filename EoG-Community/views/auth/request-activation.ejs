<%- include('../includes/head.ejs') %>
</head>
<body>
  <div class="error-section">

    <div class="error-section-info">
        <p class="error-section-subtitle">Richiedi l'attivazione</p>

        <p class="error-section-text">Per richiedere un nuovo link di attivazione 
          semplicemente clicca il pulsante qui di seguito!</p>

        <form class="form" action="/richiedi-attivazione" method="POST">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">

          <!-- INZIO RIGA EMAIL -->
          <div class="form-row">
            <div class="form-item">
              <div class="form-input">
                <label for="loginEmail">Email</label>
                <input 
                  
                  type="email" id="email" name="email" 
                  value="<%= oldInput.email %>" required>
              </div>
            </div>
          </div>
          <!-- FINE RIGA -->
          <button type="submit">Richiedi ora!</button>
        </form>
    </div>
  </div>

<%- include('../includes/end.ejs') %>