<div class="account-hub-sidebar">
    <div class="sidebar-box no-padding">
        <!-- MENU -->
        <div class="sidebar-menu">
            <!-- SEZIONE PROFILO -->
            <div class="sidebar-menu-item">
                <!-- TITOLO -->
                <div class="sidebar-menu-header accordion-trigger-linked">
                    <svg class="sidebar-menu-header-icon icon-profile">
                        <use xlink:href="#svg-profile"></use>
                    </svg>

                    <!-- ICONA STATO APERTURA -->
                    <div class="sidebar-menu-header-control-icon">
                        <!-- ICONA MENU APERTO -->
                        <svg class="sidebar-menu-header-control-icon-open icon-minus-small">
                            <use xlink:href="#svg-minus-small"></use>
                        </svg>
                        <!-- FINE ICONA -->

                        <!-- ICONA MENU CHIUSO -->
                        <svg class="sidebar-menu-header-control-icon-closed icon-plus-small">
                            <use xlink:href="#svg-plus-small"></use>
                        </svg>
                        <!-- FINE ICONA -->
                    </div>
                    <!-- FINE ICONA STATO APERTURA -->

                    <p class="sidebar-menu-header-title">Il mio Profilo</p>
                    <p class="sidebar-menu-header-text">Cambia il tuo avatar, accetta richieste d'amicizia, e molto
                        altro!</p>
                </div>
                <!-- FINE TITOLO -->

                <!-- CONTENUTO -->
                <div class="sidebar-menu-body accordion-content-linked 
                <%=  (['/info-profilo', '/socials', '/notifiche', '/messaggi', '/richieste-amicizia'].indexOf(path) >= 0)
                    ? 'accordion-open' : '';
                %>">
                    <a class="sidebar-menu-link <%= path === '/info-profilo' ? 'active' : '' %>"
                        href="/profilo/info-profilo">Informazioni Profilo</a>

                    <a class="sidebar-menu-link <%= path === '/socials' ? 'active' : '' %>"
                        href="/profilo/socials">Social &amp; Stream</a>

                    <a class="sidebar-menu-link <%= path === '/notifiche' ? 'active' : '' %>"
                        href="/profilo/notifiche">Notifiche</a>

                    <a class="sidebar-menu-link <%= path === '/messaggi' ? 'active' : '' %>"
                        href="/profilo/messaggi">Messaggi</a>

                    <a class="sidebar-menu-link <%= path === '/richieste-amicizia' ? 'active' : '' %>"
                        href="/profilo/richieste-amicizia">Richiesta d'amicizia</a>
                </div>
                <!-- CONTENUTO -->
            </div>
            <!-- FINE PROFILO -->

            <!-- SEZIONE ACCOUNT -->
            <div class="sidebar-menu-item">
                <!-- TITOLO -->
                <div class="sidebar-menu-header accordion-trigger-linked">
                    <svg class="sidebar-menu-header-icon icon-settings">
                        <use xlink:href="#svg-settings"></use>
                    </svg>

                    <!-- ICONA STATO APERTURA -->
                    <div class="sidebar-menu-header-control-icon">
                        <!-- ICONA MENU APERTO -->
                        <svg class="sidebar-menu-header-control-icon-open icon-minus-small">
                            <use xlink:href="#svg-minus-small"></use>
                        </svg>
                        <!-- FINE ICONA -->

                        <!-- ICONA MENU CHIUSO -->
                        <svg class="sidebar-menu-header-control-icon-closed icon-plus-small">
                            <use xlink:href="#svg-plus-small"></use>
                        </svg>
                        <!-- FINE ICONA -->
                    </div>
                    <!-- FINE ICONA STATO APERTURA -->

                    <p class="sidebar-menu-header-title">Account</p>
                    <p class="sidebar-menu-header-text">Cambia le impostazioni, gestisci la tua privacy e configura le
                        notifiche</p>
                </div>
                <!-- FINE TITOLO -->

                <!-- CONTENUTO -->
                <div class="sidebar-menu-body accordion-content-linked
                <%=  (['/info-account', '/cambia-password', '/impostazioni'].indexOf(path) >= 0)
                    ? 'accordion-open' : '';
                %>">
                    <a class="sidebar-menu-link <%= path === '/info-account' ? 'active' : '' %>"
                        href="/profilo/info-account">Account Info</a>
                    <a class="sidebar-menu-link <%= path === '/cambia-password' ? 'active' : '' %>"
                        href="/profilo/cambia-password">Cambia Password</a>
                    <a class="sidebar-menu-link <%= path === '/impostazioni' ? 'active' : '' %>"
                        href="/profilo/impostazioni">Impostazioni Generali</a>
                </div>
                <!-- FINE CONTENUTO -->
            </div>
            <!-- FINE ACCOUNT -->

            <!-- SEZIONE GRUPPI -->
            <div class="sidebar-menu-item">
                <!-- TITOLO -->
                <div class="sidebar-menu-header accordion-trigger-linked">
                    <svg class="sidebar-menu-header-icon icon-group">
                        <use xlink:href="#svg-group"></use>
                    </svg>

                    <!-- ICONA STATO APERTURA -->
                    <div class="sidebar-menu-header-control-icon">
                        <!-- ICONA MENU APERTO -->
                        <svg class="sidebar-menu-header-control-icon-open icon-minus-small">
                            <use xlink:href="#svg-minus-small"></use>
                        </svg>
                        <!-- FINE ICONA -->

                        <!-- ICONA MENU CHIUSO -->
                        <svg class="sidebar-menu-header-control-icon-closed icon-plus-small">
                            <use xlink:href="#svg-plus-small"></use>
                        </svg>
                        <!-- FINE ICONA -->
                    </div>
                    <!-- FINE ICONA STATO APERTURA -->

                    <p class="sidebar-menu-header-title">Gruppi</p>
                    <p class="sidebar-menu-header-text">Crea nuovi gruppi, gestisci quelli che hai creato o accetta inviti!</p>
                </div>
                <!-- FINE TITOLO -->

                <!-- CONTENUTO -->
                <div class="sidebar-menu-body accordion-content-linked 
                <%=  (['/gruppi', '/inviti-gruppi'].indexOf(path) >= 0) ? 'accordion-open' : ''; %>">
                    <a class="sidebar-menu-link <%= path === '/gruppi' ? 'active' : '' %>" 
                        href="/profilo/gruppi">Gestisci Gruppi</a>
                    <a class="sidebar-menu-link <%= path === '/inviti-gruppi' ? 'active' : '' %>" 
                        href="/profilo/inviti-gruppi">Inviti</a>
                </div>
                <!-- FINE CONTENUTO -->
            </div>
            <!-- FINE GRUPPI -->

        </div>
        <!-- FINE MENU -->

        <!-- FOOTER -->
        <div class="sidebar-box-footer" style="padding: 15px;">
        </div>
        <!-- FINE FOOTER -->
    </div>
</div>