<!-- CHAT LATERALE -->
<aside id="chat-widget-messages" class="chat-widget closed sidebar right">
    <!-- LISTA CHAT -->
    <div class="chat-widget-messages" data-simplebar>
        <!-- CHAT 1 -->
        <div class="chat-widget-message">
            <div class="user-status">
                <!-- FOTO UTENTE -->
                <div class="user-status-avatar">
                    <div class="user-avatar small no-outline online">
                        <div class="user-avatar-content">
                            <div class="hexagon-image-30-32" data-src="/img/avatar/08.jpg"></div>
                        </div>

                        <!-- BORDO -->
                        <div class="user-avatar-progress-border">
                            <div class="hexagon-border-40-44"></div>
                        </div>
                        <!-- FINE BORDO -->
                    </div>
                </div>
                <!-- FINE FOTO -->

                <p class="user-status-title"><span class="bold">Staff Emperor Of Gaming</span></p>
                <p class="user-status-text small">Ci dispiace ma le chat sono...</p>
                <p class="user-status-timestamp floaty">08:10</p>
            </div>
        </div>
        <!-- FINE CHAT -->
    </div>
    <!-- FINE LISTA -->

    <!-- FORM RICERCA MESSAGGI -->
    <form class="chat-widget-form">
        <div class="interactive-input small">
            <input type="text" id="chatsearch" name="chatsearch" placeholder="Cerca Messaggio">
            
            <!-- ICONA INVIO -->
            <div class="interactive-input-icon-wrap">
                <svg class="interactive-input-icon icon-magnifying-glass">
                    <use xlink:href="#svg-magnifying-glass"></use>
                </svg>
            </div>
            <!-- FINE ICONA -->

            <!-- ICONA CANCELLA -->
            <div class="interactive-input-action">
                <svg class="interactive-input-action-icon icon-cross-thin">
                    <use xlink:href="#svg-cross-thin"></use>
                </svg>
            </div>
            <!-- FINE ICONA -->
        </div>
    </form>
    <!-- FINE FORM -->

    <!-- PULSANTE -->
    <div class="chat-widget-button">
        <!-- ICONA APERTURA -->
        <div class="chat-widget-button-icon">
            <div class="burger-icon">
                <div class="burger-icon-bar"></div>
                <div class="burger-icon-bar"></div>
                <div class="burger-icon-bar"></div>
            </div>
        </div>
        <!-- FINE ICONA -->

        <p class="chat-widget-button-text">Messaggi / Chat</p>
    </div>
    <!-- FINE PULSANTE -->
</aside>
<!-- FINE CHAT LATERALE -->

<!-- CHAT APERTA -->
<aside id="chat-widget-message" class="chat-widget chat-widget-overlay hidden sidebar right">
    <!-- TITOLO -->
    <div class="chat-widget-header">
        <!-- PULSANTE CHIUSURA -->
        <div class="chat-widget-close-button">
            <svg class="chat-widget-close-button-icon icon-back-arrow">
                <use xlink:href="#svg-back-arrow"></use>
            </svg>
        </div>
        <!-- FINE PULSANTE -->

        <!-- ROBA UTENTE -->
        <div class="user-status">
            <!-- FOTO UTENTE -->
            <div class="user-status-avatar">
                <div class="user-avatar small no-outline online">
                    <!-- FOTO -->
                    <div class="user-avatar-content">
                        <div class="hexagon-image-30-32" data-src="/img/avatar/08.jpg"></div>
                    </div>
                    <!-- FINE FOTO -->

                    <!-- BORDO -->
                    <div class="user-avatar-progress-border">
                        <div class="hexagon-border-40-44"></div>
                    </div>
                    <!-- FINE BORDO -->
                </div>
            </div>
            <!-- FOTO UTENTE -->

            <p class="user-status-title" id="chat-title"><span class="bold">Staff Emperor of Gaming</span></p>
            <p class="user-status-tag online">Online</p>
        </div>
        <!-- FINE ROBA -->
    </div>
    <!-- FINE TITOLO -->

    <!-- CONVERSAZIONE -->
    <div class="chat-widget-conversation" id="chatWidgetConversation" data-simplebar>
        <!-- MESSAGGIO RICEVUTO -->
        <div class="chat-widget-speaker left">
            <!-- FOTO UTENTE -->
            <div class="chat-widget-speaker-avatar">
                <div class="user-avatar tiny no-border">
                    <div class="user-avatar-content">
                        <div class="hexagon-image-24-26" data-src="/img/avatar/08.jpg"></div>
                    </div>
                </div>
            </div>
            <!-- FINE FOTO -->

            <p class="chat-widget-speaker-message">Ci dispiace ma le chat sono state temporaneamente disattivate!</p>
            <p class="chat-widget-speaker-timestamp">08:10</p>
        </div>
        <!-- FINE RICEVUTO -->

        <!-- MESSAGGIO INVIATO -->
