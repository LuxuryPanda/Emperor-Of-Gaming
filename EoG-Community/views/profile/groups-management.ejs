      <div class="popup-box-content">
        <div class="widget-box">
          <p class="widget-box-title">Creazione Gruppo</p>
      
          <!-- FORM -->
          <div class="widget-box-content">
            <form class="form" action="/profilo/crea-gruppo" method="POST">
              <!-- RIGA 1 -->
              <div class="form-row">
                <div class="form-item">
                  <div class="form-input small active">
                    <label for="groupName">Nome Gruppo</label>
                    <input type="text" id="groupName" name="groupName" value="Gruppo Bello">
