          <div class="create-entity-box">
            <div class="create-entity-box-cover"></div>
        
            <!-- ICONA -->
            <div class="create-entity-box-avatar">
              <svg class="create-entity-box-avatar-icon icon-group">
                <use xlink:href="#svg-group"></use>
              </svg>
            </div>
            <!-- FINE ICONA -->
        
            <!-- INFO NUOVO GRUPPO -->
            <div class="create-entity-box-info">
              <p class="create-entity-box-title">Crea un nuovo Gruppo</p>
              <p class="create-entity-box-text">Condividi la tua passione con gli altri!</p>
        
              <p class="button secondary full popup-group-creation-trigger">Crea il Gruppo!</p>
            </div>
            <!-- FINE INFO -->
          </div>
          <!-- FINE CREA GRUPPO -->

          <!-- GRUPPO -->
          <div class="user-preview small fixed-height-medium">
            <figure class="user-preview-cover liquid">
              <img src="/img/cover/29.jpg" alt="cover-29">
            </figure>

            <!-- INFO & GESTIONE -->
            <div class="user-preview-info">
              <div class="user-short-description small">
                <!-- FOTO GRUPPO -->
                <a class="user-short-description-avatar user-avatar no-stats" href="/g/nomegruppo">
                  <!-- BORDO -->
                  <div class="user-avatar-border">
                    <div class="hexagon-100-108"></div>
                  </div>
                  <!-- FINE BORDO -->
              
                  <div class="user-avatar-content">
                    <div class="hexagon-image-84-92" data-src="/img/avatar/24.jpg"></div>
                  </div>
