                </div>
              </div>
              <!-- FINE RIGA 1 -->

              <!-- RIGA 2 -->
              <div class="form-row">
                <div class="form-item">
                  <div class="form-input small mid-textarea">
                    <textarea id="groupDescription" name="groupDescription" placeholder="Scrivi una piccola descrizione del gruppo..."></textarea>
                  </div>
                </div>
              </div>
              <!-- FINE RIGA 2 -->
            </form>
          </div>
          <!-- FINE FORM -->
        </div>
